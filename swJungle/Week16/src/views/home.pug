doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header 
            h1 Noom
        main
            div#welcome
                form
                    input(placeholer="room name", required, type = "text")
                    button enter room
                h4 Open Rooms 
                ul
            div#room
                h3
                ul
                form#name
                    input(placeholer="name", required, type = "text")
                    button Save
                form#msg
                    input(placeholer="message", required, type = "text")
                    button Send 
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js")